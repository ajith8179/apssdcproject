<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/bg3"
    tools:context=".ThridActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thirdActivity_TextView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/third_Button_DatePicker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:onClick="onClickDatePicker"
            android:background="#F1145A"
            android:textColor="@color/white"
            android:text="@string/datepicker" />


    </LinearLayout>
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:onClick="onClickShow"
        android:background="#FF001E"
        android:textColor="@color/white"
        android:text="@string/ShowNotes"/>


    <EditText
        android:id="@+id/third_EditText_Data"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:textColor="#0C0606"
        android:fontFamily="@font/cookie_regular"
        android:textSize="30sp"
        android:inputType="textMultiLine" />


</LinearLayout>